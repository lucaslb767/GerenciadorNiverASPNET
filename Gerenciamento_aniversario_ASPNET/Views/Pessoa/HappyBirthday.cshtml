@model IEnumerable<Gerenciamento_aniversario_ASPNET.Models.Pessoa>

@{
    ViewData["Title"] = "HappyBirthday";
}

<h1>Happy Birthday!</h1>

<p>
    <a asp-action="Create">Create New</a> |
    <a asp-action="Index">Voltar para página principal</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                Data de Aniversário
            </th>
            <th>
                Dias p/ Próximo Aniversário
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataDeAniversario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DiasRestantes)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>

